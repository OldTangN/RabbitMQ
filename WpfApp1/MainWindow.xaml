<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="btnStartServer" Content="启动服务" HorizontalAlignment="Left" Margin="23,23,0,0" VerticalAlignment="Top" Width="75" Click="BtnStartServer_Click"/>
        <RichTextBox x:Name="rtxtMsg" HorizontalAlignment="Left" Height="351" Margin="313,24,0,0" VerticalAlignment="Top" Width="457">
            <FlowDocument>
                <Paragraph>
                    <Run Text="RichTextBox"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Button x:Name="btnStartClient" Content="启动客户端" HorizontalAlignment="Left" Margin="23,73,0,0" VerticalAlignment="Top" Width="75" Click="BtnStartClient_Click"/>
        <Button x:Name="btnServerSend" Content="服务端发送" HorizontalAlignment="Left" Margin="124,23,0,0" VerticalAlignment="Top" Width="75" Click="BtnServerSend_Click"/>
        <TextBox x:Name="txtRouteKey" HorizontalAlignment="Left" Height="23" Margin="204,19,0,0" TextWrapping="Wrap" Text="PLC" VerticalAlignment="Top" Width="89"/>
        <Button x:Name="btnClientSend" Content="客户端发送" HorizontalAlignment="Left" Margin="124,73,0,0" VerticalAlignment="Top" Width="75" Click="BtnClientSend_Click"/>
        <Button Name="btnTest" Click="BtnTest_Click" Content="测试" HorizontalAlignment="Left" Margin="23,140,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
